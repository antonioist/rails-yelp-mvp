<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-group">

    <%= f.input :content %>
  </div>

  <div class="form-group">

    <%= f.input :rating, collection: Review::RATINGS %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>

<%= link_to restaurants_path  do%>
    <i id="dragon" class="fab fa-d-and-d"></i>
  <% end %>
